{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "jest --coverage",
    "build": "lerna run build",
    "precommit": "lint-staged",
    "prepublishOnly": "yarn build",
    "postinstall": "lerna bootstrap"
  },
  "lint-staged": {
    "**/*.md": "prettier --write",
    "packages/**/*.{ts,js,json}": [
      "yarn test",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "jest": "^27.3.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  }
}
